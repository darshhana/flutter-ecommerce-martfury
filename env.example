# MartFury Flutter E-commerce App Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Application name (displayed in app)
APP_NAME=MartFury

# Environment (development, staging, production)
APP_ENV=development

# App version (automatically updated by CI/CD)
APP_VERSION=1.1.1

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Botble E-commerce API base URL
# Replace with your actual Botble backend URL
API_BASE_URL=https://your-botble-ecommerce-api.com

# API timeout in seconds
API_TIMEOUT=30

# Enable API logging (true/false)
API_LOGGING=true

# =============================================================================
# FIREBASE CONFIGURATION (Optional)
# =============================================================================

# Firebase project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase API key
FIREBASE_API_KEY=your-firebase-api-key

# Firebase messaging sender ID
FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Firebase app ID
FIREBASE_APP_ID=your-firebase-app-id

# =============================================================================
# SOCIAL LOGIN CONFIGURATION (Optional)
# =============================================================================

# Google Sign-In
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook Login
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple Sign-In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true

# =============================================================================
# DEBUG CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG_MODE=true

# Enable verbose logging
VERBOSE_LOGGING=false

# Test user credentials (for development only)
TEST_EMAIL=test@example.com
TEST_PASSWORD=testpassword123

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT token expiration time (in hours)
JWT_EXPIRATION_HOURS=24

# Enable certificate pinning
ENABLE_CERTIFICATE_PINNING=false

# API rate limiting
API_RATE_LIMIT=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache expiration time (in minutes)
CACHE_EXPIRATION_MINUTES=60

# Maximum cache size (in MB)
MAX_CACHE_SIZE_MB=100

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Enable local notifications
ENABLE_LOCAL_NOTIFICATIONS=true

# Notification sound enabled
NOTIFICATION_SOUND=true

# Notification vibration enabled
NOTIFICATION_VIBRATION=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable developer tools
ENABLE_DEVELOPER_TOOLS=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable crash reporting
ENABLE_CRASH_REPORTING=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Update .gitignore to exclude .env files
# 3. Use environment-specific values for different deployments
# 4. Keep sensitive information secure and use proper secret management
# 5. Test all configurations before deploying to production
